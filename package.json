{
  "name": "opcs-onboarding-system",
  "version": "1.6.0",
  "private": true,
  "description": "HR Onboarding System for Optimal Prime Cleaning Services",
  "type": "module",
  "packageManager": "bun@1.3.6",
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev -w opcs-onboarding-backend",
    "dev:frontend": "npm run dev -w opcs-onboarding-frontend",
    "build": "npm run build -w opcs-onboarding-frontend",
    "start": "npm run start -w opcs-onboarding-backend",
    "lint": "concurrently \"npm run lint:backend\" \"npm run lint:frontend\"",
    "lint:backend": "npm run lint -w opcs-onboarding-backend",
    "lint:frontend": "npm run lint -w opcs-onboarding-frontend",
    "typecheck": "npm run typecheck -w opcs-onboarding-frontend",
    "test": "concurrently \"npm run test:backend\" \"npm run test:frontend\"",
    "test:backend": "npm run test:run -w opcs-onboarding-backend",
    "test:frontend": "npm run test:run -w opcs-onboarding-frontend",
    "test:watch": "concurrently \"npm run test -w opcs-onboarding-backend\" \"npm run test -w opcs-onboarding-frontend\"",
    "test:coverage": "concurrently \"npm run test:coverage -w opcs-onboarding-backend\" \"npm run test:coverage -w opcs-onboarding-frontend\"",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules bun.lockb",
    "postinstall": "echo 'âœ… Dependencies installed'",
    "prepare": "husky"
  },
  "keywords": [
    "onboarding",
    "hr",
    "compliance"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "lint-staged": {
    "frontend/src/**/*.{js,vue}": [
      "npm run lint:frontend"
    ],
    "backend/src/**/*.js": [
      "npm run lint:backend"
    ]
  }
}